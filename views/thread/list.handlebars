<h1>List all threads ordered by last answered date</h1>

{{#each threads}}
  <div class="mb60 car-details" >
    <h2>Title: <a href="/post/{{this._id}}/{{this.title}}">{{this.title}}</a></h2>
    <h3>Description: {{this.description}}</h3>
    <h3>Category Name: {{this.category.name}}</h3>
    <p>Author: <a href="/profile/{{this.author.username}}">{{this.author.username}}</a></p>
    <p>Thread Date: {{this.date}}</p>
    <p>Last Answer: {{this.lastAnswerDate}}</p>
    <p>Views: {{this.views}} Answers: {{this.answers.length}} Likes: {{this.likes}}</p>
    <hr />
  </div>
{{else}}
  <p>No threads to show.</p>
{{/each}}

<div class="font-3x">
  {{#if hasPrevPage}}
    <a href="/list?page={{prevPage}}">&lt;&lt;</a>
    &nbsp; &nbsp; &nbsp;
  {{/if}}
  {{#if hasNextPage}}
    <a href="/list?page={{nextPage}}">&gt;&gt;</a>
  {{/if}}
</div>