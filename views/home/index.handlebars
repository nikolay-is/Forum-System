{{#each threads}}
  <div class="mb60 car-details" >
    <h2>Title: {{this.title}}</h2>
    <h3>Description: {{this.description}}</h3>
    <h3>Category Name:{{this.category.name}}</h3>
    <p>Thread Date: {{this.date}}</p>
    <p>Last Answer: {{this.lastAnswerDate}}</p>
    <a href="/post/{{this._id}}/{{this.title}}">Show</a>
    <hr />
  </div>
{{/each}}
</div>