<!DOCTYPE html>
<html lang="en">
<head>
  <title>Forum System</title>
  <link href="/css/site.css" type="text/css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/list">List thread</a></li>
      {{#if currentUser}}
        <li><a href="/add">Add thread</a></li>
      {{/if}}
      <li><a href="/categories">Categories</a></li>
      {{#if isAdmin}}
        <li><a href="/category/add">Add category</a></li>
        <li><a href="/admins/all">List admin</a></li>
        <li><a href="/admins/add">Add admin</a></li>
      {{/if}}
      <li></li>
      {{#if currentUser}}
        <li><a href="/profile/{{currentUser.username}}">{{currentUser.username}}</a></li>
        <li>
            <form id="logout-form" action="/users/logout" method="POST"></form>
            <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
        </li>
      {{else}}
        <li><a href="/users/register">Register</a></li>
        <li><a href="/users/login">Login</a></li>
      {{/if}}
    </ul>
    {{#if globalError}}
      <h3>{{globalError}}</h3>
    {{/if}}
    {{{body}}}
  </div>
</body>
</html>
